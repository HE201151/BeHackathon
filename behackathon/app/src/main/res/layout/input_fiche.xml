<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" >

    </ScrollView>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridlay">

        <TextView
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="Full Name :"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2" />
           <!-- salut !-->

        <EditText
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:id="@+id/fullname"
            android:layout_row="0"
            android:layout_column="2"
            android:maxLines="1"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="Age :"
            android:id="@+id/textView2"
            android:layout_row="1"
            android:layout_column="1" />

        <EditText
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:id="@+id/age"
            android:layout_row="1"
            android:layout_column="2"
            android:maxLines="1"
            android:inputType="number" />

        <TextView
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="Contact :"
            android:id="@+id/textView3"
            android:layout_row="2"
            android:layout_column="1" />

        <EditText
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:id="@+id/contact"
            android:layout_row="2"
            android:layout_column="2"
            android:maxLines="1"
            android:inputType="number" />

        <TextView
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="Groupe Sanguin :"
            android:id="@+id/textView4"
            android:layout_row="3"
            android:layout_column="1" />

        <EditText
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:id="@+id/groupeSanguin"
            android:layout_row="3"
            android:layout_column="2"
            android:maxLines="1"
            android:inputType="text" />

        <TextView
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="Traitement :"
            android:id="@+id/textView5"
            android:layout_row="4"
            android:layout_column="1" />

        <EditText
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:id="@+id/traitement"
            android:layout_row="4"
            android:layout_column="2"
            android:inputType="text" />

        <TextView
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="Alergie :"
            android:id="@+id/textView6"
            android:layout_row="5"
            android:layout_column="1" />

        <EditText
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:id="@+id/alergie"
            android:layout_row="5"
            android:layout_column="2"
            android:inputType="text" />

        <TextView
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="Handicape :"
            android:id="@+id/textView7"
            android:layout_row="6"
            android:layout_column="1" />

        <EditText
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:id="@+id/handicape"
            android:layout_row="6"
            android:layout_column="2"
            android:inputType="text" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:id="@+id/btnOk"
            android:layout_row="7"
            android:layout_column="2"
            android:clickable="true" />


    </GridLayout>

</RelativeLayout>
